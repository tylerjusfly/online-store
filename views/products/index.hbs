{{#> app}}
{{#*inline "content"}}
<div class="grid grid-cols-3">
{{#each viewData.products}}
<div class="m-auto">
    <a href="/products/{{getId}}" class="block p-6 max-w-sm bg-white rounded border border-gray-200 shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700 mb-9">
    <img src="/uploads/{{getImage}}" class="object-contain h-48 w-96 rounded">
    <p class="font-bold text-gray-700 dark:text-gray-400 text-center pt-3">{{getName}}</p>
    </a>
</div>
{{/each}}
</div>
{{/inline}}
{{/app}}
